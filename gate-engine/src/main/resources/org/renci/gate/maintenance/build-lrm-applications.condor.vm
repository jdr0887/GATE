# generated by the PortalGlideinFactory

universe             = grid

grid_resource        = ${gridType} ${gatekeeper}/jobmanager-${jobmanager}
globusrsl            = ${rsl}
x509userproxy        = ${workDirPath}/.proxy

executable           = build-lrm-applications.sh

TransferExecutable   = true
stream_output        = False
stream_error         = False
WhenToTransferOutput = ON_EXIT

output               = build-lrm-applications.out
error                = build-lrm-applications.err
log                  = build-lrm-applications.log

periodic_hold        = ( (GlobusStatus==16) \
                         || ((JobStatus==1) && ((CurrentTime - EnteredCurrentStatus) > (12*60*60))) \
                         || ((JobStatus==2) && ((CurrentTime - EnteredCurrentStatus) > (24*60*60))) \
                       )
periodic_remove      = (NumSystemHolds >= 1)

notification         = NEVER

queue 1
