<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <bean id="pg-ds-jta" class="org.postgresql.xa.PGXADataSource">
    <property name="user" value="rsp-user"/>
    <property name="password" value="rsp-pwd"/>
    <property name="serverName" value="localhost"/>
    <property name="databaseName" value="rsp"/>
    <property name="portNumber" value="5432"/>
  </bean>
  
  <service id="xaDataSource" ref="pg-ds-jta" interface="javax.sql.XADataSource">
    <service-properties>
      <entry key="osgi.jndi.service.name" value="jdbc/rspjta"/>
    </service-properties>
  </service>

  <bean id="pg-ds-no-jta" class="org.postgresql.ds.PGSimpleDataSource">
    <property name="user" value="rsp-user"/>
    <property name="password" value="rsp-pwd"/>
    <property name="serverName" value="localhost"/>
    <property name="databaseName" value="rsp"/>
    <property name="portNumber" value="5432"/>
  </bean>
  
  <service id="pgDataSource" ref="pg-ds-no-jta" interface="javax.sql.DataSource">
    <service-properties>
      <entry key="osgi.jndi.service.name" value="jdbc/rspnojta"/>
    </service-properties>
  </service>
  
</blueprint>
