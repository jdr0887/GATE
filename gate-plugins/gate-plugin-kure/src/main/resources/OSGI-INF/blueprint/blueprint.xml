<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="lazy">

  <bean id="pseqProdQueue" class="org.renci.jlrm.Queue">
    <property name="name" value="pseq_prod" />
    <property name="weight" value="1" />
    <property name="maxJobLimit" value="64" />
    <property name="maxMultipleJobsToSubmit" value="3" />
    <property name="pendingTime" value="1440" />
    <property name="runTime" value="5760" />
  </bean>

  <bean id="weekQueue" class="org.renci.jlrm.Queue">
    <property name="name" value="week" />
    <property name="weight" value="0.7" />
    <property name="maxJobLimit" value="8" />
    <property name="maxMultipleJobsToSubmit" value="1" />
    <property name="pendingTime" value="1440" />
    <property name="runTime" value="4320" />
  </bean>

  <bean id="pseqTCGAQueue" class="org.renci.jlrm.Queue">
    <property name="name" value="pseq_tcga" />
    <property name="weight" value="1" />
    <property name="maxJobLimit" value="8" />
    <property name="maxMultipleJobsToSubmit" value="1" />
    <property name="pendingTime" value="1440" />
    <property name="runTime" value="5760" />
  </bean>

  <bean id="site" class="org.renci.jlrm.Site">
    <property name="name" value="Kure" />
    <property name="project" value="TCGA" />
    <property name="submitHost" value="biodev1.its.unc.edu" />
    <property name="LRMBinDirectory" value="/nas02/apps/lsf/LSF_TOP_706/7.0/linux2.6-glibc2.3-x86_64/bin" />
    <property name="maxTotalPending" value="6" />
    <property name="maxTotalRunning" value="30" />
    <property name="queueInfoMap">
      <map>
        <entry key="pseq_prod" value-ref="pseqProdQueue" />
        <entry key="week" value-ref="weekQueue" />
      </map>
    </property>
  </bean>

  <cm:property-placeholder persistent-id="org.renci.gate.plugin.kure" update-strategy="reload">
    <cm:default-properties>
      <cm:property name="active_queues" value="pseq_prod,week" />
    </cm:default-properties>
  </cm:property-placeholder>

  <bean id="kureGATEService" class="org.renci.gate.plugin.kure.KureGATEService">
    <property name="collectorHost" value="biodev1.its.unc.edu" />
    <property name="site" ref="site" />
    <property name="activeQueues" value="{active_queues}" />
    <cm:managed-properties persistent-id="org.renci.gate.plugin.kure" update-strategy="container-managed" />
  </bean>

  <service ref="kureGATEService" interface="org.renci.gate.GATEService" />

</blueprint>
