<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  default-activation="lazy">

  <bean id="siteInfo" class="org.renci.gate.SiteInfo">
    <property name="condorCollectorHost" value="biodev1.its.unc.edu" />
    <property name="submitHost" value="br0.renci.org" />
    <property name="maxIdleCount" value="10" />
    <property name="maxMultipleJobs" value="4" />
    <property name="maxNoClaimTime" value="60" />
    <property name="maxQueueTime" value="1440" />
    <property name="maxRunTime" value="2880" />
    <property name="maxTotalCount" value="50" />
    <property name="multiplier" value="1" />
    <property name="name" value="BlueRidge" />
    <property name="project" value="" />
    <property name="queue" value="" />
  </bean>

  <bean id="blueRidgeGATEService" class="org.renci.gate.plugins.blueridge.BlueRidgeGATEService">
    <property name="siteInfo" ref="siteInfo" />
  </bean>

  <service ref="blueRidgeGATEService" interface="org.renci.gate.GATEService" />

</blueprint>
