<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  default-activation="lazy">

  <bean id="all.q" class="org.renci.gate.QueueInfo">
    <property name="name" value="all.q" />
    <property name="weight" value="1" />
    <property name="maxJobLimit" value="64" />
    <property name="maxMultipleJobsToSubmit" value="3" />
    <property name="pendingTime" value="1440" />
    <property name="runTime" value="2880" />
  </bean>

  <bean id="test.q" class="org.renci.gate.QueueInfo">
    <property name="name" value="test.q" />
    <property name="weight" value="1" />
    <property name="maxJobLimit" value="8" />
    <property name="maxMultipleJobsToSubmit" value="1" />
    <property name="pendingTime" value="1440" />
    <property name="runTime" value="2880" />
  </bean>

  <bean id="site" class="org.renci.jlrm.Site">
    <property name="name" value="Lineberger" />
    <property name="project" value="TCGA" />
    <property name="submitHost" value="swprod.bioinf.unc.edu" />
    <property name="LRMBinDirectory" value="/opt/gridengine/bin/lx26-amd64" />
    <property name="maxTotalPending" value="6" />
    <property name="maxTotalRunning" value="30" />
    <property name="queueInfoMap">
      <map>
        <entry key="all.q" value-ref="all.q" />
      </map>
    </property>
  </bean>

  <bean id="linebergerGATEService" class="org.renci.gate.plugins.lineberger.LinebergerGATEService">
    <property name="collectorHost" value="biodev1.its.unc.edu" />
    <property name="siteInfo" ref="siteInfo" />
  </bean>

  <service ref="linebergerGATEService" interface="org.renci.gate.GATEService" />

</blueprint>
